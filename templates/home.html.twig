{% extends 'base.html.twig' %}


{% block body %}


    <div class="w-1/4 p-4 border rounded-xl flex flex-col items-center justify-center text-gray-400">
        <div class="flex flex-col">
            {{ form_start(form) }}
            <p>{{ form_label(form.city) }}</p>
            {{ form_widget(form.city, {attr:{'class': 'mt-2 border border-gray-400 rounded-lg'}}) }}
            {{ form_widget(form.submit, {attr:{'class': 'p-2 bg-green-600 rounded-lg text-white mt-2'}}) }}
            {{ form_end(form) }}
        </div>
        {% if infos is not null  %}
            <div class="mt-3 flex flex-col justify-center">
                <img width="64px" height="64px" src="http://openweathermap.org/img/w/{{ infos.icon }}.png"></img>
                <p>Sky : {{ infos.description }}</p>
                <p>Temperature : {{ infos.temperature }}°c</p>
                <p>Felt teperature : {{ infos.feelLike }}°c</p>
                <p>Humidity : {{ infos.humidity }}</p>
                <p>Pressure : {{ infos.pressure }}</p>
            </div>
        {% endif %}

    </div>



{% endblock %}
